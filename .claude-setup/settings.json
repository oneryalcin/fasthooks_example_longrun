{
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=/opt/fasthooks/src python3 /opt/hooks/main.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=/opt/fasthooks/src python3 /opt/hooks/main.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=/opt/fasthooks/src python3 /opt/hooks/main.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "PYTHONPATH=/opt/fasthooks/src python3 /opt/hooks/main.py"
          }
        ]
      }
    ]
  },
  "model": "haiku"
}
